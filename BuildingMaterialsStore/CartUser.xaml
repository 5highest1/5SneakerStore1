<Page x:Class="BuildingMaterialsStore.CartUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuildingMaterialsStore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="cartUser">

    <Grid Background="#FF1EAD97">
        <ListView x:Name="cart" ScrollViewer.CanContentScroll="False" Background="#FF1EAD97" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="38,85,38,124" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Width="724" Height="241" ContextMenuClosing="cart_ContextMenuClosing">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="700" />
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding CurrentPhoto}" Grid.Column="0" Margin="0,0,10,0"/>
                        <StackPanel Grid.Column="1" Margin="423,0,139,0">
                            <TextBlock Text="{Binding Id}" Visibility="Collapsed"/>
                            <Button x:Name="removecart" Height="29" Content="убрать из корзины" RenderTransformOrigin="0.5,0.5" Width="134" Foreground="Black" Click="removecart_Click" Background="#FFF9FEFF">
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Width="146" Orientation="Vertical" HorizontalAlignment="Left">
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto" >
                        <Run Text="Наименование:"/> 
                        <Run Text="{Binding NameGoods}"/>
                            </TextBlock>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto" ><Run Text=" "/><Run Text=" "/><Run Text=" "/></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Width="138" Orientation="Vertical" HorizontalAlignment="Left" Margin="305,0,0,0">
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto" >
                       <Run Text="Цена: "/> 
                        <Run Text="{Binding Price}"/>
                            </TextBlock>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto" >
                        <Run Text=" "/> 
                        <Run Text=" "/>
                            </TextBlock>

                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="orderbutton" Content="Cформировать заказ" HorizontalAlignment="Center" VerticalAlignment="Top" Height="63" Width="158" Click="orderbutton_Click" IsEnabled="False" Margin="0,377,0,0" Foreground="Black" Background="#FF1BAD97"/>
        <Button x:Name="gobackbutton" Content="назад" HorizontalAlignment="Left" Margin="737,5,0,0" VerticalAlignment="Top" Height="31" Width="53" Foreground="Black" Background="#FFE1F2FF" Click="gobackbutton_Click"/>
    </Grid>
</Page>